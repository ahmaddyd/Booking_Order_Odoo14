<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_view_wo" model="ir.actions.act_window">
            <field name="name">Work Order</field>
            <field name="res_model">work.order</field>
            <field name="view_mode">tree,form</field>
            
            <field name="context">{'search_default_booking_order_reference': [active_id],
                                   'default_booking_order_reference': active_id}</field>
        </record>

        <!-- work.order tree view -->
        <!-- otree (odoo tree) -->
        <record id="work_order_view_tree" model="ir.ui.view">
            <field name="name">work.order.tree</field>
            <field name="model">work.order</field>
            <field name="type">tree</field>
            
            <field name="arch" type="xml">
                <tree string="Service Team">
                    <!-- Add your fields here -->
                    <field name="work_order_number"/>
                    <field name="booking_order_reference"/>
                    <field name="team"/>
                    <field name="team_leader"/>
                    <field name="team_members"/>
                    <field name="planned_start"/>
                    <field name="planned_end"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="note"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- work.order form view -->
        <!-- oform (odoo form) -->
        <record id="work_order_view_form" model="ir.ui.view">
            <field name="name">work.order.form</field>
            <field name="model">work.order</field>
            <field name="type">form</field>
            
            <field name="arch" type="xml">
                <form string="Service Team">
                    <header>
                        <button name="start_work" states="pending" string="Start Work" type="object"/>
                        <button name="end_work" states="in_progress" string="End Work" type="object"/>
                        <button name="reset" states="in_progress" string="Reset" type="object"/>
                        <button name="%(cancel_order_action)d" states="pending,in_progress,done" string="Cancel"
                                type="action"/>
                        
                        <field name="state" widget="statusbar" statusbar_visible="pending,in_progress,done,cancelled"/>
                    </header>
                    
                    <sheet>
                        <group cols="2" string="Work Order">
                            <group>
                                <field name="work_order_number"/>
                                <field name="booking_order_reference"/>
                                <field name="team"/>
                                <field name="team_leader"/>
                                <field name="team_members" widget="many2many_tags"/>
                            </group>
                            
                            <group>
                                <field name="planned_start"/>
                                <field name="planned_end"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="note"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- work.order kanban view -->
        <!-- okanban (odoo kanban) -->
        <record id="work_order_view_kanban" model="ir.ui.view">
            <field name="name">work.order.kanban</field>
            <field name="model">work.order</field>
            
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <!-- Add your fields here -->
                    <field name="work_order_number"/>
                    <field name="booking_order_reference"/>
                    <field name="team"/>
                    <field name="team_leader"/>
                    <field name="planned_start"/>
                    <field name="planned_end"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-xs-6">
                                        <strong><span><t t-esc="work_order_number"/></span></strong>
                                    </div>
                                    <div class="col-xs-6 pull-right text-right">
                                        <strong><field name="planned_start"/></strong>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-xs-6 text-muted">
                                        <span><t t-esc="booking_order_reference"/></span>
                                    </div>
                                    <div class="col-xs-6 pull-right text-right">
                                        <field name="planned_end"/>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-xs-6 text-muted">
                                        <span><t t-esc="record.team.value"/></span>
                                    </div>
                                    <div class="col-xs-6 pull-right text-right">
                                        <field name="date_start"/>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-xs-6 text-muted">
                                        <span><t t-esc="record.team_leader.value"/></span>
                                    </div>
                                    <div class="col-xs-6 pull-right text-right">
                                        <field name="date_end"/>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-xs-6">
                                        <span>
                                            <field name="state" widget="kanban_label_selection" options="{'classes': {'pending': 'default', 'in_progress': 'default',
                                        'done': 'default', 'cancelled': 'default'}}"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- work.order search window -->
        <!-- osearch (odoo search) -->
        <record id="work_order_view_search" model="ir.ui.view">
            <field name="name">work.order.search</field>
            <field name="model">work.order</field>
            
            <field name="arch" type="xml">
                <search string="Search Work Order">
                    <!-- Add your fields here -->
                    <field name="work_order_number" string="Work Order"/>
                    <field name="booking_order_reference"/>
                    <field name="team"/>
                    <field name="team_leader"/>
                    <field name="planned_start"/>
                    <field name="planned_end"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="state"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="BO Reference" domain="[]" context="{'group_by':'booking_order_reference'}" name="booking_order_reference"/>
                        <filter string="Team" domain="[]" context="{'group_by':'team'}" name="team"/>
                        <filter string="Team Leader" domain="[]" context="{'group_by':'team_leader'}" name="team_leader"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- work.order action window -->
        <!-- oact (odoo action) -->
        <record id="work_order_action" model="ir.actions.act_window">
            <field name="name">Working Order</field>
            <field name="res_model">work.order</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
            
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Klik untuk menambahkan
                </p>
                
                <p>Tekan tombol create untuk Working Order baru</p>
            </field>
        </record>

        <menuitem 
            id="work_order_menu_categ"
            name="Work Order" 
            parent="booking_main" 
            sequence="2" 
            action="work_order_action"/>
    </data>
</odoo>